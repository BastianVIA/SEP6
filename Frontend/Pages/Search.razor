@page "/search/{searchTerm}"
@using Frontend.Entities
@using Frontend.Service
@inject NavigationManager NavManager
@using Frontend.Model.MovieSearch
@using Frontend.Model.UserSearch

<PageTitle>Search</PageTitle>

<Checkbox @bind-Value="@searchUsers">Search Users</Checkbox>

@if (searchUsers)
{
    <SearchUser SearchTerm="@SearchTerm" />
}
else
{
    <SearchMovie SearchTerm="@SearchTerm" />
}

@code {
    [Parameter]
    public string SearchTerm { get; set; }
    private bool searchUsers = false;
}